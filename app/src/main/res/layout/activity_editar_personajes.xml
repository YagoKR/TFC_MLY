<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.actividades.edicion.EditarPersonajes"
    android:background="@android:color/white"
    android:padding="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEditarPersonaje"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#3F60D8"
            android:elevation="4dp"
            app:title="Editar Personaje"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageViewEditarPersonaje"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/imagen_estilo"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/toolbarEditarPersonaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/nombrePersonajeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del personaje"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewEditarPersonaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/nombreEditarPersonaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/nombrePersonajeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/razaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/nombreEditarPersonaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/razaEditarPersonaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/razaLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/statsPersonajeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clases"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/razaEditarPersonaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/statsEditarPersonaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/statsPersonajeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnEditarPersonaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textAllCaps="false"
            android:backgroundTint="#3F60D8"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/statsEditarPersonaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
