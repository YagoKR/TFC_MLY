<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.actividades.creacion.CrearItem"
    android:background="@android:color/white"
    android:padding="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearItem"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F60D8"
        android:elevation="4dp"
        app:title="Crear Ítem"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imagenItem"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/imagen_estilo"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarCrearItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/labelNombreItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del ítem"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imagenItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/nomeItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Iron Sword"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelNombreItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nomeItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/cantidadItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. 3"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelCantidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción (opcional)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cantidadItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/descripcionItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Flechas comunes usadas para practicar tiro con arco."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top|start"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textoAvisoIngles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="⚠️ Debido a la API utilizada, el ítem y su información deben estar en inglés."
        android:textColor="#FF9800"
        android:textStyle="italic"
        android:background="#1AFF9800"
        android:padding="8dp"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/descripcionItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCrearItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:textAllCaps="false"
        android:backgroundTint="#3F60D8"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textoAvisoIngles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
