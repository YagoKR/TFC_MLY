<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.actividades.creacion.CrearPersonaje"
    android:background="@android:color/white"
    android:padding="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearPersonaje"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F60D8"
        android:elevation="4dp"
        app:title="Crear Personaje"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewPersonaje"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/imagen_estilo"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/toolbarCrearPersonaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/nombrePersonajeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del personaje"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewPersonaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/nombrePersonaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Aragorn"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/nombrePersonajeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/razaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nombrePersonaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/razaPersonaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Humano"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/razaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statsPersonajeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clases"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/razaPersonaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/statsPersonaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Guerrero, Mago"
        android:inputType="text"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/statsPersonajeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCrearPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:textAllCaps="false"
        android:backgroundTint="#3F60D8"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/statsPersonaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
